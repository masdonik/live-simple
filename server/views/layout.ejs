<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Live Streaming Manager' %></title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome & Moment.js -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        dark: {
                            50: '#f9fafb',
                            100: '#f3f4f6',
                            200: '#e5e7eb',
                            300: '#d1d5db',
                            400: '#9ca3af',
                            500: '#6b7280',
                            600: '#4b5563',
                            700: '#374151',
                            800: '#1f2937',
                            900: '#111827',
                        },
                    },
                },
            },
        }
    </script>

    <style>
        /* Custom styles */
        .system-stats {
            background: rgba(31, 41, 55, 0.8);
            backdrop-filter: blur(5px);
        }
        body {
            background-color: #111827;
            color: #f3f4f6;
        }
    </style>
</head>
<body class="min-h-screen font-sans">
    <!-- Header dengan System Stats -->
    <header class="fixed top-0 w-full z-50">
        <div class="system-stats p-4 text-sm">
            <div class="container mx-auto flex flex-wrap justify-between items-center">
                <h1 class="text-xl font-bold mb-2 md:mb-0">Live Streaming Manager</h1>
                <div class="flex flex-wrap gap-4">
                    <div class="flex items-center">
                        <i class="fas fa-microchip mr-2"></i>
                        <span>CPU: <span id="cpuUsage">0</span>%</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-memory mr-2"></i>
                        <span>RAM: <span id="memoryUsage">0</span>%</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-hdd mr-2"></i>
                        <span>Disk: <span id="diskUsage">0</span>%</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto pt-24 px-4 pb-8">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark-800 text-center py-4 text-sm text-gray-400">
        <p>&copy; <%= new Date().getFullYear() %> Live Streaming Manager. All rights reserved.</p>
    </footer>

    <!-- Scripts -->
    <script>
        // Update system stats every 5 seconds
        function updateSystemStats() {
            fetch('/api/system-stats')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('cpuUsage').textContent = data.cpu;
                    document.getElementById('memoryUsage').textContent = data.memory;
                    document.getElementById('diskUsage').textContent = data.disk;
                })
                .catch(error => console.error('Error fetching system stats:', error));
        }

        // Initial update and set interval
        updateSystemStats();
        setInterval(updateSystemStats, 5000);
    </script>
</body>
</html>