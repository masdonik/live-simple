<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Live Simple</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'dark-900': '#121212',
                        'dark-800': '#1E1E1E',
                        'dark-700': '#2D2D2D',
                        'dark-600': '#3D3D3D'
                    }
                }
            }
        }
    </script>
    <style>
        body {
            background-color: #121212;
            color: #FFFFFF;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="bg-dark-800 border-b border-dark-600">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <a href="/" class="text-xl font-bold flex items-center">
                    <i class="fas fa-broadcast-tower text-blue-500 mr-2"></i>
                    Live Simple
                </a>
                <div class="flex space-x-4">
                    <a href="/live" class="<%= title === 'Live Streaming' ? 'bg-blue-600' : 'hover:bg-dark-700' %> text-white px-4 py-2 rounded-md transition duration-200">
                        <i class="fas fa-video mr-2"></i>Live Streaming
                    </a>
                    <a href="/download-video" class="<%= title === 'Download Video' ? 'bg-green-600' : 'hover:bg-dark-700' %> text-white px-4 py-2 rounded-md transition duration-200">
                        <i class="fas fa-download mr-2"></i>Download Video
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- System Info -->
    <div class="bg-dark-800 border-b border-dark-600 py-2">
        <div class="container mx-auto px-4">
            <div class="flex justify-between text-sm text-gray-300">
                <div class="flex space-x-6">
                    <span><i class="fas fa-microchip mr-2"></i><%= stats.cpu.model %> (<%= stats.cpu.cores %> cores, <%= stats.cpu.speed %>)</span>
                    <span><i class="fas fa-memory mr-2"></i><%= stats.memory.used %> / <%= stats.memory.total %></span>
                </div>
                <div class="flex space-x-6">
                    <% stats.disk.forEach(function(disk) { %>
                        <span><i class="fas fa-hdd mr-2"></i><%= disk.fs %>: <%= disk.used %> / <%= disk.size %> (<%= disk.use %>)</span>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <%- body %>

    <!-- Footer -->
    <footer class="bg-dark-800 border-t border-dark-600 py-4 mt-8">
        <div class="container mx-auto px-4">
            <p class="text-center text-gray-400">&copy; 2024 Live Simple. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>